{
  "name": "@pristine/elegant",
  "version": "1.0.0-alpha.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "homepage": "https://elegant.pristine.technology",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "/dist",
    "/resources"
  ],
  "bin": {
    "elegant": "./dist/cli/elegant-cli.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "build": "tsc",
    "watch": "tsx devops/tsc-watch.ts",
    "local:start": "cd ./__tests__/app && docker compose up -d",
    "local:stop": "cd ./__tests__/app && docker compose down",
    "local:migrate": "npm run migrate --prefix ./__tests__/app",
    "docs:build": "rm -rf docs/* && docker compose down && docker compose up && npm run docs:extract",
    "docs:extract": "unzip -o docs/webHelpElegant2-all.zip -d docs && rm -rf docs/webHelpELEGANT2-all.zip docs/algolia-indexes-ELEGANT.zip && echo 'elegant.pristine.technology' > docs/CNAME",
    "prepublishOnly": "npm run build && cp -r ./resources ./dist"
  },
  "author": "Joshua D. Williams",
  "license": "ISC",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshua-williams/elegant.git"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "ascii-table": "^0.0.9",
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "inquirer": "^12.10.0",
    "mariadb": "^3.4.5",
    "mysql2": "^3.15.1",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "typescript": "^5.9.2",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@types/mysql": "^2.15.27",
    "@types/node": "^24.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "jsdom": "^27.0.0",
    "vitest": "^3.2.4"
  }
}
