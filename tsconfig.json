{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "nodenext",
    "target": "esnext",
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["node", "vitest/globals"],
     "lib": ["esnext"],
  },
  "include": [
    "types.d.ts",
    "index.ts",
    "lib/**/*.ts",
    "cli/**/*.ts",
    "__tests__/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "resources/**/*.ts"
  ]
}
