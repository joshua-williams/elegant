{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    "types": ["node", "jest"],
    // For nodejs:
     "lib": ["esnext"],
    "isolatedModules": true,
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
  },
  "include": [
    "types.d.ts",
    "src/**/*",
    "cli/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
